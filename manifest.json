{
    "manifest_version": 3,
    "name": "TrickLo - AI Assistant",
    "version": "2.2.0",
    "description": "Trợ lý AI thông minh - Quét câu hỏi từ màn hình và nhận đáp án nhanh chóng",
    "permissions": [
        "contextMenus",
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://generativelanguage.googleapis.com/*",
        "https://unpkg.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "content.css"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "commands": {
        "screenshot-ocr": {
            "suggested_key": {
                "default": "Ctrl+Shift+S",
                "mac": "Command+Shift+S"
            },
            "description": "Chụp màn hình và quét câu hỏi"
        }
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "screenshot-overlay.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}